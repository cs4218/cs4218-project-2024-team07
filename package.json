{
  "name": "ecom",
  "version": "1.0.0",
  "description": "ecommerce rest api",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "PORT=3000 npm start --prefix ./client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "sonarqube": "sonarqube-scanner",
    "test:frontend": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.frontend.js --verbose --coverage",
    "test:backend": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.backend.js --verbose --coverage",
    "test:playwright": "npx playwright test tests/pages/admin/createCategory.spec.cjs",
    "test:playwrightProduct": "npx playwright test tests/pages/admin/createProduct.spec.cjs",
    "test": "npm run test:backend && npm run test:frontend; npx playwright install && npx playwright test",
    "clear_jest": "jest --clearCache"
  },
  "keywords": [],
  "author": "RP",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^9.0.3",
    "bcrypt": "^5.1.1",
    "braintree": "^3.22.0",
    "colors": "^1.4.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "date-fns": "^3.3.1",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-formidable": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "mongoose": "^8.7.2",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.3",
    "react-icons": "^5.0.1",
    "slugify": "^1.6.6",
    "supertest": "^7.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-react": "^7.24.1",
    "@playwright/test": "^1.46.1",
    "@testing-library/jest-dom": "^6.5.0",
    "@types/braintree": "^3.3.12",
    "@types/node": "^20.12.12",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "html-webpack-plugin": "^5.6.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mongodb-memory-server": "^10.1.2",
    "sonarqube-scanner": "^3.3.0",
    "supertest": "^7.0.0"
  }
}
